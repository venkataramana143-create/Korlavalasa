@page
@model AboutModel
@{
    ViewData["Title"] = "About Korlavalasa";
}

 

<div class="about-header">
    <div class="container">
        <h1 class="page-title text-center mb-3">
            <i class="fas fa-info-circle me-2"></i>About Korlavalasa Village
        </h1>
        <p class="text-center mb-0 opacity-75" style="font-size: clamp(1rem, 2vw, 1.2rem);">
            Discover the rich heritage and vibrant community of our village
        </p>
    </div>
</div>

<div class="container">
    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Village Overview -->
            <div class="card">
                <div class="card-body">
                    <h2 class="section-title">Welcome to Korlavalasa</h2>
                    <p class="lead-text">@Model.VillageInfo.AboutText</p>
                </div>
            </div>

            <!-- History Section -->
            <div class="card">
                <div class="card-body">
                    <h3 class="section-title">
                        <i class="fas fa-history me-2"></i>Our Rich History
                    </h3>
                    <p class="card-text fs-6">@Model.VillageInfo.History</p>

                    <div class="history-section mt-4">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="feature-item">
                                    <i class="fas fa-landmark"></i>
                                    <h5 class="fw-bold">Historical Significance</h5>
                                    <p class="text-muted mb-0">Korlavalasa has been a center of agricultural excellence for generations, preserving traditional farming methods while adopting modern techniques.</p>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="feature-item">
                                    <i class="fas fa-people-arrows"></i>
                                    <h5 class="fw-bold">Cultural Heritage</h5>
                                    <p class="text-muted mb-0">Our village maintains ancient traditions, festivals, and community practices that have been passed down through centuries.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Village Leadership -->
            <div class="card">
                <div class="card-body">
                    <h3 class="section-title">
                        <i class="fas fa-users me-2"></i>Village Leadership
                    </h3>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="leadership-card">
                                <i class="fas fa-user-tie"></i>
                                <h5 class="fw-bold mb-2">Sarpanch</h5>
                                <p class="fs-5 fw-bold text-success mb-1">@Model.VillageInfo.SarpanchName</p>
                                <p class="text-muted mb-0">Village Head Representative</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="leadership-card">
                                <i class="fas fa-user-shield"></i>
                                <h5 class="fw-bold mb-2">Village Secretary</h5>
                                <p class="fs-5 fw-bold text-success mb-1">@Model.VillageInfo.SecretaryName</p>
                                <p class="text-muted mb-0">Administrative Officer</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Quick Facts -->
            <div class="card">
                <div class="card-body">
                    <h5 class="section-title mb-3">
                        <i class="fas fa-chart-bar me-2"></i>Village Statistics
                    </h5>
                    <div class="stats-list">
                        <div class="stat-item">
                            <span>Population</span>
                            <span class="stat-badge">@Model.VillageInfo.Population</span>
                        </div>
                        <div class="stat-item">
                            <span>Area</span>
                            <span class="stat-badge">@Model.VillageInfo.Area sq km</span>
                        </div>
                        <div class="stat-item">
                            <span>Households</span>
                            <span class="stat-badge">~850</span>
                        </div>
                        <div class="stat-item">
                            <span>Literacy Rate</span>
                            <span class="stat-badge">72%</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Agricultural Profile -->
            <div class="card">
                <div class="card-body">
                    <h5 class="section-title mb-3">
                        <i class="fas fa-seedling me-2"></i>Agricultural Profile
                    </h5>
                    <p class="fw-bold mb-3">Main Crops: <span class="text-success">@Model.VillageInfo.MainCrops</span></p>

                    <div class="crop-progress">
                        <div class="d-flex justify-content-between mb-1">
                            <small>Paddy</small>
                            <small class="fw-bold">60%</small>
                        </div>
                        <div class="progress mb-3">
                            <div class="progress-bar bg-success" style="width: 60%"></div>
                        </div>

                        <div class="d-flex justify-content-between mb-1">
                            <small>Sweet Corn</small>
                            <small class="fw-bold">25%</small>
                        </div>
                        <div class="progress mb-3">
                            <div class="progress-bar bg-info" style="width: 25%"></div>
                        </div>

                        <div class="d-flex justify-content-between mb-1">
                            <small>Other Crops</small>
                            <small class="fw-bold">15%</small>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-warning" style="width: 15%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Location -->
            <div class="card">
                <div class="card-body">
                    <h5 class="section-title mb-3">
                        <i class="fas fa-map me-2"></i>Location
                    </h5>
                    <div class="map-placeholder">
                        <i class="fas fa-map-marked-alt"></i>
                        <p class="fw-bold mb-1">Korlavalasa Village</p>
                        <small class="text-muted">
                            Vizianagaram District<br>
                            Andhra Pradesh - 532127
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Village Features -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h3 class="section-title text-center mb-4">What Makes Korlavalasa Special</h3>
                    <div class="row">
                        <div class="col-md-3 col-6">
                            <div class="feature-item">
                                <i class="fas fa-temple"></i>
                                <h6 class="fw-bold">Ancient Temples</h6>
                                <p class="text-muted mb-0 small">8 historical temples with unique architecture</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="feature-item">
                                <i class="fas fa-water"></i>
                                <h6 class="fw-bold">Water Resources</h6>
                                <p class="text-muted mb-0 small">Abundant natural water sources for irrigation</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="feature-item">
                                <i class="fas fa-school"></i>
                                <h6 class="fw-bold">Education</h6>
                                <p class="text-muted mb-0 small">5 educational institutions serving the community</p>
                            </div>
                        </div>
                        <div class="col-md-3 col-6">
                            <div class="feature-item">
                                <i class="fas fa-heart"></i>
                                <h6 class="fw-bold">Community Spirit</h6>
                                <p class="text-muted mb-0 small">Strong social bonds and cultural unity</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Add interactive animations
    document.addEventListener('DOMContentLoaded', function() {
        // Animate progress bars on scroll
        const progressBars = document.querySelectorAll('.progress-bar');

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const width = entry.target.style.width;
                    entry.target.style.width = '0';
                    setTimeout(() => {
                        entry.target.style.width = width;
                        entry.target.style.transition = 'width 1.5s ease-in-out';
                    }, 300);
                }
            });
        }, { threshold: 0.5 });

        progressBars.forEach(bar => observer.observe(bar));

        // Add hover effects to cards
        const cards = document.querySelectorAll('.card');
        cards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
            });
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    });
</script>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>