@page
@model Korlavalasa.Pages.Admin.AdminNews.CreateModel
@{
    ViewData["Title"] = "Create News";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="d-flex align-items-center mb-4">
                <a asp-page="Index" class="btn btn-outline-secondary btn-sm me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <div>
                    <h2 class="text-success mb-1">
                        <i class="fas fa-newspaper me-2"></i>Create News Article
                    </h2>
                    <p class="text-muted mb-0">Add a new news article to share with the community</p>
                </div>
            </div>

            <!-- Success Message -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i>News Details
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form method="post" id="newsForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Title Field -->
                        <div class="mb-4">
                            <label asp-for="News.Title" class="form-label fw-semibold">
                                <i class="fas fa-heading me-2 text-success"></i>Title *
                            </label>
                            <input asp-for="News.Title" class="form-control form-control-lg"
                                   placeholder="Enter news title in English or Telugu" />
                            <span asp-validation-for="News.Title" class="text-danger small"></span>
                            <div class="form-text text-muted">
                                <i class="fas fa-language me-1"></i>Supports both English and Telugu content
                            </div>
                        </div>

                        <!-- Content Field -->
                        <div class="mb-4">
                            <label asp-for="News.Content" class="form-label fw-semibold">
                                <i class="fas fa-align-left me-2 text-success"></i>Content *
                            </label>
                            <textarea asp-for="News.Content" class="form-control" rows="8"
                                      placeholder="Write your news content in English or Telugu..."></textarea>
                            <span asp-validation-for="News.Content" class="text-danger small"></span>
                            <div class="form-text text-muted">
                                <i class="fas fa-language me-1"></i>You can type in Telugu using any Telugu keyboard
                            </div>
                        </div>

                        <!-- Image URL Field -->
                        <div class="mb-4">
                            <label asp-for="News.ImageUrl" class="form-label fw-semibold">
                                <i class="fas fa-image me-2 text-success"></i>Image URL
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-link text-muted"></i>
                                </span>
                                <input asp-for="News.ImageUrl" class="form-control"
                                       placeholder="https://example.com/image.jpg" />
                            </div>
                            <span asp-validation-for="News.ImageUrl" class="text-danger small"></span>
                            <div class="form-text text-muted">
                                <i class="fas fa-info-circle me-1"></i>Optional: Provide a direct image URL
                            </div>
                        </div>

                        <!-- Publish Options -->
                        <div class="mb-4">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <div class="form-check form-switch">
                                        <input asp-for="News.IsActive" class="form-check-input" type="checkbox" checked
                                               role="switch" id="publishSwitch">
                                        <label class="form-check-label fw-semibold" for="publishSwitch">
                                            <i class="fas fa-globe me-2 text-success"></i>Publish immediately
                                        </label>
                                    </div>
                                    <small class="text-muted">
                                        When enabled, the news will be visible to all visitors immediately
                                    </small>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <a asp-page="Index" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-success px-5 py-2 fw-semibold">
                                <i class="fas fa-paper-plane me-2"></i>Publish News
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Telugu Typing Help -->
            <div class="card bg-light border-0 mt-4">
                <div class="card-body">
                    <h6 class="card-title text-success mb-3">
                        <i class="fas fa-keyboard me-2"></i>Typing in Telugu
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-2"><strong>On Mobile:</strong></p>
                            <ul class="list-unstyled small">
                                <li><i class="fas fa-check text-success me-2"></i>Use Gboard or any Telugu keyboard</li>
                                <li><i class="fas fa-check text-success me-2"></i>Switch to Telugu in keyboard settings</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2"><strong>On Laptop:</strong></p>
                            <ul class="list-unstyled small">
                                <li><i class="fas fa-check text-success me-2"></i>Use Google Input Tools extension</li>
                                <li><i class="fas fa-check text-success me-2"></i>Enable Telugu in Windows/Mac language settings</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Auto-focus on title field
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('News_Title').focus();
        });

        // Character counter for title
        const titleInput = document.getElementById('News_Title');
        const titleCounter = document.createElement('div');
        titleCounter.className = 'form-text text-end text-muted small';
        titleInput.parentNode.appendChild(titleCounter);

        titleInput.addEventListener('input', function() {
            const count = this.value.length;
            titleCounter.textContent = `${count}/200 characters`;
            if (count > 190) {
                titleCounter.className = 'form-text text-end text-danger small';
            } else {
                titleCounter.className = 'form-text text-end text-muted small';
            }
        });
    </script>
}