@page
@model Korlavalasa.Pages.Admin.AdminNews.DeleteModel
@{
    ViewData["Title"] = "Delete News";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-trash me-2"></i>Delete News
                    </h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Are you sure you want to delete this news article?</h5>

                    <div class="alert alert-warning">
                        <strong>News Details:</strong>
                        <ul class="mb-0 mt-2">
                            <li><strong>Title:</strong> @Model.News.Title</li>
                            <li><strong>Published:</strong> @Model.News.PublishedDate.ToString("MMM dd, yyyy hh:mm tt")</li>
                            <li>
                                <strong>Status:</strong>
                                <span class="badge @(Model.News.IsActive ? "bg-success" : "bg-secondary")">
                                    @(Model.News.IsActive ? "Active" : "Inactive")
                                </span>
                            </li>
                            @if (!string.IsNullOrEmpty(Model.News.ImageUrl))
                            {
                                <li><strong>Has Image:</strong> Yes</li>
                            }
                        </ul>
                    </div>

                    <form method="post">
                        <input type="hidden" asp-for="News.Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Delete News
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>